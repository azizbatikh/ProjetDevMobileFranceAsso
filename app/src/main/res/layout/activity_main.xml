<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <ImageButton
        android:layout_width="80px"
        android:layout_height="100px"
        android:src="@drawable/arrowback"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45px"
        android:scaleType="fitCenter"
        android:clickable="true"
        />

    <ImageView
        android:layout_width="80px"
        android:layout_height="100px"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-38dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/reglage"
        android:clickable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FirstTexte"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/calistoga"
        android:textSize="28dp"
        android:textColor="@color/vertfonce"
        />
    <View
        android:layout_width="350dp"
        android:layout_height="5px"
        android:background="@color/vertfonce"
        android:layout_marginLeft="19dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/versrecherche"
        android:text="@string/secondtexte"
       android:background="@drawable/boutonshape"
        android:fontFamily="@font/calistoga"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:textStyle="bold"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="60dp"
        android:text="@string/troisiemetexte"
        android:background="@drawable/shapeorange"
        android:fontFamily="@font/calistoga"
        android:gravity="start|center_vertical"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="18dp"
        android:id="@+id/versguide"
        />


    <View
        android:layout_width="wrap_content"
        android:layout_height="10px"
        android:background="@drawable/gradient"
        android:layout_marginTop="60dp"
        />

    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:justifyContent="center"
        android:padding="10dp"
        >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:background="@color/white"
        android:paddingRight="30dp"
        />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aaa"
            android:background="@color/white"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group"
            android:background="@color/white"
            android:paddingLeft="30dp"
            />

    </com.google.android.flexbox.FlexboxLayout>


</LinearLayout>